GATEWAY_PUBLIC_ENDPOINT=http://localhost:8080/gateway/

GATEWAY_MANAGEMENT_PORT=8081
GATEWAY_PORT=8080

KEYCLOAK_PROTOCOL=http
KEYCLOAK_HOST=keycloak
KEYCLOAK_PORT=8080
KEYCLOAK_URL=${KEYCLOAK_PROTOCOL}://${KEYCLOAK_HOST}:${KEYCLOAK_PORT}/auth
# IMPORTANT: Run ./setup.sh *before* starting docker-compose to initialise these secret values.
KEYCLOAK_APIMAN_API_SECRET=REPLACE_THIS_SECRET
